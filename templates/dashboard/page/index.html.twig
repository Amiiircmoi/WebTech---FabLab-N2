{% extends "dashboard/base.html.twig" %}

{% block body %}
	<div class="d-sm-flex align-items-center justify-content-between mb-4">
		<h1 class="h3 mb-0 text-gray-800">Page d'accueil</h1>
		<a href="{{ path('app_dashboard_page_new') }}" class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm">
			<i class="fas fa-circle-plus fa-sm text-white-50"></i>
			Ajouter du contenu
		</a>
	</div>

	<div class="row">
		<div class="col-xl-12 col-lg-11">
			<div class="card shadow mb-4">
				<div class="card-header py-3 d-flex flex-row align-items-center justify-content-between"></div>
				<div class="card-body">
					<table class="table table-borderless table-hover">
						<thead>
							<tr>
								<th scope="col" width="35%">Nom</th>
								<th scope="col" width="35%">Contenu</th>
							</tr>
						</thead>
						<tbody>
							{% for content in contents %}
								<tr>
									<td class="align-middle">{{ content.name }}</td>
									<td class="align-middle">{{ content.content }}</td>
									<td class="align-middle">
										<a title="Ã‰diter" href="{{ path('app_dashboard_page_edit', {'id': content.id}) }}" class="btn btn-circle btn-warning">
											<i class="fas fa-edit"></i>
										</a>
									</td>
									<td class="align-middle">
										{% include "dashboard/page/_delete_form.html.twig" %}
									</td>
								</tr>
							{% else %}
								<tr>
									<td colspan="3">Aucun contenu sur la page</td>
								</tr>
							{% endfor %}
						</tbody>
					</table>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
